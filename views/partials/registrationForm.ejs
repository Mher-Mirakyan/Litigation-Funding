<div class="container-fluid bg-white py-24">
    <div class="container mx-auto px-5 lg:px-16 lg:flex lg:justify-around">
        <div class="w-full lg:w-1/2">
            <h2 class="text-mainColor text-2xl font-bold"><%= info.title %></h2>
            <ol class="list-decimal text-lg px-14">
                <li><span class="font-medium mb-10"><%= info.step_1_subtitle %></span><br><%= info.step_1_text %></li>
                <li><span class="font-medium mb-10"><%= info.step_3_subtitle %></span><br><%= info.step_3_text %></li>
                <li><span class="font-medium"><%= info.step_3_subtitle %></span><br><%= info.step_3_text %>.</li>
            </ol>
        </div>
        <div class="w-full lg:w-1/2 mt-12 lg:mt-0">
            <form class="w-full max-w-lg  mx-auto px-0 lg:px-5 text-center lg:text-start">
                <div class="flex flex-wrap -mx-3 mb-6 justify-between">
                  <div class="w-full  px-3 mb-6 md:mb-0">
                    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
                      Name <span class="text-red-600">*</span>
                    </label>
                    <div class="flex justify-between">
                        <input class="appearance-none block w-1/2 bg-white text-gray-700 border border-gray-200 rounded py-3 px-4 mr-3 leading-tight focus:outline-none focus:border-mainColor" id="grid-first-name" type="text" placeholder="First">
                        <input class="appearance-none block w-1/2 bg-white text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:border-mainColor" id="grid-last-name" type="text" placeholder="Last">
                    </div>
                  </div>
                </div>
                <div class="flex flex-wrap -mx-3 mb-6 justify-between">
                    <div class="w-full sm:w-1/2 md:w-1/2 px-3 mb-6 md:mb-0">
                      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-email">
                        Email Address <span class="text-red-600">*</span>
                      </label>
                      <input class="appearance-none block w-full bg-white text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:border-mainColor" id="grid-email" type="email" placeholder="">
                    </div>
                    <div class="w-full sm:w-1/2 md:w-1/2 px-3">
                      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-phone">
                        Phone <span class="text-red-600">*</span>
                      </label>
                      <input class="appearance-none block w-full bg-white text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:border-mainColor" id="grid-phone" type="tel" placeholder="">
                    </div>
                  </div>
                  <div class="flex flex-wrap -mx-3 mb-2">
                    <div class="w-full  px-3 mb-6 md:mb-0">
                      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-state">
                        Case Type <span class="text-red-600">*</span>
                      </label>
                      <div class="relative">
                        <select class="block appearance-none w-full bg-white border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-mainColor" id="grid-state">
                          <option>- Select -</option>
                          <option>Personal Injury</option>
                          <option>Auto Accident</option>
                          <option>Wrongful Death</option>
                          <option>Maritime Injuries</option>
                          <option>Other</option>
                        </select>
                      </div>
                    </div>
                  </div>
                <button class="uppercase bg-mainColor hover:bg-black duration-300 text-white mt-5 py-3 px-8 rounded-full font-bold ">Apply Now For Funding</button>
              </form>
        </div>
    </div>
   </div>