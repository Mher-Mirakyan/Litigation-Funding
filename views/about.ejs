<%- include('partials/header'); %>

  <div class="container mx-auto">
    <div class="w-full  py-20">

        <% if (articles.length > 0) { %>
            <% articles.forEach(function(article, index) { %>

        <div class="lg:w-full bg-white py-10 px-10 shadow-2xl transition-all duration-500 hover:-translate-y-4 hover:bg-hoverblockColor sm:w-full sm:mb-10 xl:mr-5">
            <h3 class="text-2xl font-semibold pb-5"><%= article.headline %></h3>
            <p class="text-lg font-normal pb-5"><%= article.text %></p>
            <button class="font-normal border-black border-b-2 hover:border-mainColor"><%= article.published %> <i class="fa-solid fa-arrow-right"></i></button>
        </div>

        <% }); %>
        <% } else { %>
          <h2>No articles found</h2>
        <% } %>
    </div>
</div>

<%- include('partials/footer'); %>